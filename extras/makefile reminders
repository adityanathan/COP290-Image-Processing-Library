$MKLROOT=path/to/mkl_installation/intel/mkl/

LD_LIBRARY_PATH=path/to/openblas_installation/OpenBLAS/lib

g++ matrix_mult.cpp -I /opt/OpenBLAS/include/ -L/opt/OpenBLAS/lib -lopenblas

g++ matrix_mult.cpp  -m64 -I${MKLROOT  -Wl,--start-group ${MKLROOT}/lib/intel64/libmkl_intel_lp64.a ${MKLROOT}/lib/intel64/libmkl_sequential.a ${MKLROOT}/lib/intel64/libmkl_core.a -Wl,--end-group -lpthread -lm -ldl

remember to use c++11 option in compiler

-std=c++11 -I /opt/OpenBLAS/include/ -L/opt/OpenBLAS/lib -lopenblas -Wl,--start-group ${MKLROOT}/lib/intel64/libmkl_intel_lp64.a ${MKLROOT}/lib/intel64/libmkl_sequential.a ${MKLROOT}/lib/intel64/libmkl_core.a -Wl,--end-group -lpthread -lm -ldl -m64 -I${MKLROOT}/include
